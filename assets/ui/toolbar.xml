	<button id="toolbar-find" styleName="toolbar-find" />
	<button id="toolbar-find-replace" styleName="toolbar-find-replace" />

	<spacer width="5" />
	
	<button id="toolbar-settings" styleName="toolbar-settings" />
</hbox>