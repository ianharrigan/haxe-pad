	<button id="toolbar-new" styleName="toolbar-new" />
	<button id="toolbar-open" styleName="toolbar-open" />
	<button id="toolbar-save" styleName="toolbar-save" />
	<button id="toolbar-save-all" styleName="toolbar-save-all" condition="Client.target != 'flash'"/>
	
